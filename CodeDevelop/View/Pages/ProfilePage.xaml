<Page x:Class="CodeDevelop.View.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CodeDevelop.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1600"
      Title="ProfilePage">

    <Grid>
        <Image Source="/Picture/Desktop - 2.png" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid Name="UserData" Width="600" Height="300" Background="white">
                <Image Source="/Picture/Avatar.png" Width="150" Height="150" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30"/>
                
                <TextBlock Text="" Width="350" Height="70" VerticalAlignment="Center" 
                           Margin="150 0 0 110" FontSize="15" FontFamily="Inter"/>
                
                <TextBlock Text="Зарегистрирован: " Width="200" Height="40" VerticalAlignment="Center" 
                           Margin="40 0 0 -40" FontSize="24" FontFamily="Inter"/>
                
                <TextBlock Text="" Width="150" Height="40" VerticalAlignment="Center" 
                           Margin="410 0 0 -35" FontSize="24" FontFamily="Inter"/>
                
                <TextBlock Text="Последний вход: " Width="200" Height="40" VerticalAlignment="Center" 
                           Margin="40 0 0 -130" FontSize="24" FontFamily="Inter"/>
                
                <TextBlock Text="" Width="150" Height="40" VerticalAlignment="Center" 
                           Margin="410 0 0 -125" FontSize="24" FontFamily="Inter"/>

                <TextBlock FontSize="20" Margin="18 130 0 0" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Hyperlink Name="ChangeAvatarBt" Foreground="#9747FF" TextDecorations="None" Click="ChangeAvatarBt_Click">
                        Изменить аватарку
                    </Hyperlink>
                </TextBlock>
            </Grid>
        </Grid>
    </Grid>
</Page>
