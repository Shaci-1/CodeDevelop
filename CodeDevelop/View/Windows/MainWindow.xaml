<Window x:Class="CodeDevelop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeDevelop"
        mc:Ignorable="d"
        Title="Экран авторизации" MinHeight="600" MinWidth="800" MaxHeight="1024" MaxWidth="1920" ResizeMode="CanResize">
    <Window.Resources>
        <Style x:Key="GridStyle" TargetType="{x:Type Grid}"/>
    </Window.Resources>
    <Grid>
        <Image Source="/Picture/Desktop - 2.png" />
        <Grid Height="440" Width="467" Background="White">
            <StackPanel>
                <TextBlock Text="Авторизация" HorizontalAlignment="Center" FontSize="30" FontFamily="Inter" Margin="0 40 0 0"/>
                <TextBox Name="loginBx" HorizontalAlignment="Center" Height="51" Width="400" Margin="0 40 0 0" Background="#FFECECEC" BorderBrush="White"
                         Text="Логин или email" FontFamily="Inter" FontSize="16"/>
                
                <PasswordBox Name="passwordBx" HorizontalAlignment="Center" Height="51" Width="400" Margin="0 40 0 0" Background="#FFECECEC" BorderBrush="White"
                         Password="Введите пароль" FontSize="16"/>
                
                <Button Name="NextBt" HorizontalAlignment="Center" Height="51" Width="400" Margin="0 30 0 0" Background="#9747FF" BorderBrush="White"
                         Content="Продолжить" FontSize="16" Foreground="White" FontFamily="Inter" Click="NextBt_Click"/>
                
                <Button Name="RegBt" HorizontalAlignment="Center" Height="51" Width="400" Margin="0 16 0 0" Background="White" BorderBrush="#9C9C9C"
                         Content="Создать аккаунт" FontSize="16" Foreground="Black" FontFamily="Inter" Click="RegBt_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
